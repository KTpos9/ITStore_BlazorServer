@page "/cart"
@inject CartData _cartDb

@if(cartItems is null)
{
    <p><em>Loading...</em></p>
}
else
{   <div class="wrapper">
    <h1>Cart</h1>
        <div class="grid_wrapper">
            <!---table-->
            <table class="table">
                <thead>
                    <tr>
                        <th>Picture</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Discount</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var items in cartItems)
                    {
                        <Table_Row CartID =@Convert.ToString(items.CartID)
                        CartImg=@items.ProductImg
                        CartName=@items.ProductName
                        CartPrice=@items.ProductPrice
                        OnDelete="Rerender"></Table_Row>
                    }
                </tbody>
            </table>

            <!--Order Summary-->
            <div>
                <h3>Order Summary</h3>
                <div class="two_column_grid">
                    <ul class="text-decoration-none">
                        <li>Total</li>
                        <li>Discount</li>
                        <li>Final price</li>
                    </ul>
                    <ul class="text-decoration-none">
                        <li>@string.Format("฿{0:f2}",cartItems.Sum(item => item.ProductPrice))</li>
                        <li>@string.Format("฿{0:f2}",0)</li>
                        <li>@string.Format("฿{0:f2}",cartItems.Sum(item => item.ProductPrice))</li>
                    </ul>
                </div>
            </div>

            <!--Payment + Discount Code-->
            <div class="two_column_grid">
                <h3>Payment</h3>
                <h3>Discount Code</h3>
            </div>
             <!--Payment-->
            <div class="two_column_grid">
                <div class="card">
                    <div class="card-header p-0">
                        <h2 class="mb-0">
                            <button class="btn btn-light btn-block text-left p-3 rounded-0" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <div class="d-flex align-items-center justify-content-between">

                                    <span>Credit card</span>
                                    <div class="icons">
                                        <img src="https://i.imgur.com/2ISgYja.png" width="30">
                                        <img src="https://i.imgur.com/W1vtnOV.png" width="30">
                                        <img src="https://i.imgur.com/35tC99g.png" width="30">
                                        <img src="https://i.imgur.com/2ISgYja.png" width="30">
                                    </div>
         
                                </div>
                            </button>
                        </h2>
                    </div>

                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body payment-card-body">
                          
                            <span class="font-weight-normal card-text">Card Number</span>
                            <div class="input">
                                <i class="fa fa-credit-card"></i>
                                <input type="text" class="form-control" placeholder="0000 0000 0000 0000">
                            </div> 

                            <div class="row mt-3 mb-3">
                                <div class="col-md-6">
                                    <span class="font-weight-normal card-text">Expiry Date</span>
                                    <div class="input">
                                        <i class="fa fa-calendar"></i>
                                        <input type="text" class="form-control" placeholder="MM/YY">
                                    </div> 
                                </div>

                                <div class="col-md-6">

                                    <span class="font-weight-normal card-text">CVC/CVV</span>
                                    <div class="input">
                                        <i class="fa fa-lock"></i>
                                        <input type="text" class="form-control" placeholder="000">
                                    </div> 
                                </div>
                            </div>
                            <div class="row">
                                <span class="text-muted certificate-text"><i class="fa fa-lock"></i> Your transaction is secured with ssl certificate</span>
                                <button class="btn btn-primary mt-3 mb-3">Checkout</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input">
                            <input type="text" class="form-control" placeholder="Enter Discount Code">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-secondary my-2">Apply</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<DataAccess.Models.Cart> cartItems;

    public string CartID{ get; set; }
    public string CartImg { get; set; }
    public string CartName { get; set; }
    public string CartPrice { get; set; }

    protected override async Task OnInitializedAsync()
    {
        cartItems = await _cartDb.GetCart();
    }
    private async Task Rerender()
    {
        cartItems = await _cartDb.GetCart();
    }
}
